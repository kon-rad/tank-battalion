#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('tank-battalion:server');
var http = require('http');

/**
 * Get port from environment and store in Express.
 */

var port = (process.env.PORT || '8000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);
app.listen(port);
